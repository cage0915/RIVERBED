---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const { folder } = Astro.params;

// Get folder metadata
const folderData = await getEntry('folders', folder!);

if (!folderData) {
    return Astro.redirect('/404');
}

// Get all albums in this folder
const allAlbums = await getCollection('albums');
const folderAlbums = allAlbums
    .filter(album => album.data.folder === folder)
    .sort((a, b) => a.data.order - b.data.order);
---

<Layout title={`${folderData.data.title} - RIVERBED`}>
    <main class="mx-auto px-2 py-8">
        <div class="albums-grid" style={`--cols: ${folderData.data.albumCols}`}>
            {folderAlbums.map((album) => (
                <a href={`/${folder}/${album.id}`} class="album-card">
                    <div class="album-cover">
                        <img
                            src={`/api/image/${album.data.coverKey}`}
                            alt={album.data.title}
                            loading="lazy"
                        />
                        <div class="album-overlay">
                            <h2 class="album-title">{album.data.title}</h2>
                        </div>
                    </div>
                </a>
            ))}
        </div>
    </main>
</Layout>

<style>
    .albums-grid {
        display: grid;
        grid-template-columns: repeat(var(--cols, 3), 1fr);
        gap: 0.5rem;
        margin: 0 auto;
    }

    @media (max-width: 1024px) {
        .albums-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 640px) {
        .albums-grid {
            grid-template-columns: 1fr;
        }
    }

    .album-card {
        text-decoration: none;
        color: inherit;
        transition: transform 0.3s ease;
    }

    .album-card:hover {
        transform: translateY(-4px);
    }

    .album-cover {
        position: relative;
        width: 100%;
        aspect-ratio: 16/9;
        overflow: hidden;
    }

    .album-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .album-overlay {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        background: rgba(255, 255, 255, 0);
        transition: background 0.3s ease;
        padding: 1.5rem;
    }

    .album-card:hover .album-overlay {
        background: rgba(255, 255, 255, 0.6);
    }

    .album-title {
        font-size: 1.5rem;
        font-weight: 300;
        text-align: center;
        color: #111827;
        opacity: 0;
        transform: translateY(10px);
        transition: all 0.3s ease;
    }

    .album-card:hover .album-title {
        opacity: 1;
        transform: translateY(0);
    }
</style>
