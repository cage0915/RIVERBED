---
import { getCollection, getEntry } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

const { folder } = Astro.params;

// Get folder metadata
const folderData = await getEntry('folders', folder!);

if (!folderData) {
    return Astro.redirect('/404');
}

// Get all albums in this folder
const allAlbums = await getCollection('albums');
const folderAlbums = allAlbums
    .filter(album => album.data.folder === folder)
    .sort((a, b) => a.data.order - b.data.order);
---

<Layout title={`${folderData.data.title} - RIVERBED`}>
    <main class="mx-auto px-2 py-8">
        <div class="albums-grid" style={`--cols: ${folderData.data.albumCols}`}>
            {folderAlbums.map((album) => (
                <div class="album-card group">
                    <a href={`/${folder}/${album.id}`} class="album-link">
                        <div class="album-cover">
                            <img
                                src={`/api/image/${album.data.coverKey}`}
                                alt={album.data.title}
                                loading="lazy"
                            />
                            <div class="album-overlay">
                                <h2 class="album-title">{album.data.title}</h2>
                            </div>
                        </div>
                    </a>
                </div>
            ))}
        </div>
    </main>
</Layout>

<script>
    const initAlbumCards = () => {
        const cards = document.querySelectorAll('.album-card');

        cards.forEach(card => {
            const link = card.querySelector('.album-link');

            card.addEventListener('click', (e) => {
                const isMobile = window.matchMedia('(max-width: 768px) and (hover: none)').matches;
                if (!isMobile) return;

                if (!card.classList.contains('show-info')) {
                    // First tap: show info
                    e.preventDefault();

                    // Close other cards
                    cards.forEach(c => c.classList.remove('show-info'));

                    card.classList.add('show-info');
                } else {
                    // Second tap: follow link (natural behavior)
                }
            });
        });

        // Close when clicking outside
        document.addEventListener('click', (e) => {
            if (!(e.target as Element).closest('.album-card')) {
                cards.forEach(c => c.classList.remove('show-info'));
            }
        });
    };

    initAlbumCards();
    document.addEventListener('astro:after-swap', initAlbumCards);
</script>

<style>
    .albums-grid {
        display: grid;
        grid-template-columns: repeat(var(--cols, 3), 1fr);
        gap: 0.5rem;
        margin: 0 auto;
    }

    @media (max-width: 1024px) {
        .albums-grid {
            grid-template-columns: repeat(2, 1fr);
        }
    }

    @media (max-width: 640px) {
        .albums-grid {
            grid-template-columns: 1fr;
        }
    }

    .album-card {
        position: relative;
    }

    .album-link {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .album-cover {
        position: relative;
        width: 100%;
        aspect-ratio: 16/9;
        overflow: hidden;
    }

    .album-cover img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .album-overlay {
        position: absolute;
        inset: 0;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 1.5rem;
        transition: all 0.4s ease;
        background: rgba(255, 255, 255, 0);
        opacity: 0;
        z-index: 10;
        pointer-events: none;
    }

    .album-title {
        font-size: 1.25rem;
        font-weight: 300;
        text-align: center;
        color: #111827;
        transform: translateY(10px);
        transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
        z-index: 20;
    }

    .album-card.show-info .album-overlay {
        opacity: 1;
        background: rgba(255, 255, 255, 0.7);
    }

    .album-card.show-info .album-title {
        opacity: 1;
        transform: translateY(0);
    }

    @media (hover: hover) {
        .album-card:hover .album-cover img {
            transform: scale(1.05);
        }

        .album-card:hover .album-overlay {
            opacity: 1;
            background: rgba(255, 255, 255, 0.6);
        }

        .album-card:hover .album-title {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
